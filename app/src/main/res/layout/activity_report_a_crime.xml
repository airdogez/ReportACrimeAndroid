<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/RelativeLayout256"
    tools:context=".ReportCrime"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/bg_main">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create a new crime report"
           android:paddingBottom="20dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleEditText"
            android:elevation="5dp"
            android:padding="10dp"
            android:background="@color/white"
            android:hint="Title"
            android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Category"
            android:id="@+id/textView7"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/categoriesSpinner" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="District"
            android:id="@+id/districtTextView"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:elevation="5dp"
            android:layout_gravity="right"
            android:textAlignment="gravity"
            android:id="@+id/districtsSpinner" />

    </LinearLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionEditText"
        android:padding="5dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:lines="4"
        android:hint="Crime Description" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/imageButton4"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/editText24"
        android:layout_centerHorizontal="true" />

     <Button
        android:id="@+id/buttonReport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:text="Report Crime"
        android:textColor="@color/btn_login"
        android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
